FROM node:20-alpine

WORKDIR /app

# Install dependencies only (package.json is mounted)
# This layer will be cached unless package.json changes
COPY package*.json ./
RUN npm install

# Source code is mounted as volume, not copied
# This enables hot reload

EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

CMD ["npm", "run", "dev"]
